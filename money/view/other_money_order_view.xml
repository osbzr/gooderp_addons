<?xml version="1.0"?>
<openerp>
    <data>
        <!--其他收入/支出tree-->
    	<record id="other_money_order_tree" model="ir.ui.view">
            <field name="name">other.money.order.tree</field>
            <field name="model">other.money.order</field>
            <field name="arch" type="xml">
                <tree string="Other Money Order">
                    <field name="name" string="单据编号"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!--其他收入/支出form-->
        <record id="other_money_order_form" model="ir.ui.view">
            <field name="name">other.money.order.form</field>
            <field name="model">other.money.order</field>
            <field name="arch" type="xml">
                <form string="Other Money Order">
                <header>
					<button name="other_money_done" states="draft" string="审核" type="object" class="oe_highlight"/>
					<button name="other_money_draft" states="done" string="反审核" type="object"/>
                	<button name="print_other_money_order" states="done" string="打印" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
				            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <field name="line_ids" context="{'type': type}">
                    	<tree string="其他收支单明细" editable="bottom">
                    		<field name="category_id"/>
                            <field name="amount" sum="合计"/>
                            <field name="note"/>
                            <field name="source_id" invisible='1'/>
                       </tree>
                    </field>
                    <group>
                    	<group>
		                	<field name="bank_id"/>
		                </group>
		                <group>	
		                	<field name="total_amount"/>
		                </group>
		            </group>
		            <group>
						<group>
		                	<field name="create_date" string="录单时间" readonly="1"/>
		                </group>
		                <group>	
		                	<field name="write_date" string="最后修改时间"  readonly="1"/>
		                </group>
		            </group>
                </sheet>
                </form>
            </field>
        </record>

        <!-- 其他收入单 action -->
        <record id="other_money_receipt_action" model="ir.actions.act_window">
            <field name="name">其他收入单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">other.money.order</field>
            <field name="view_mode">tree,form</field>
            <field  name='context'>{'type':'other_get'}</field>
            <field name="domain">[('type','=','other_get')]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建其他收入单
              </p>
            </field>
        </record>
        
        <!-- 其他支出单 action -->
        <record id="other_money_payment_action" model="ir.actions.act_window">
            <field name="name">其他支出单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">other.money.order</field>
            <field name="view_mode">tree,form</field>
            <field  name='context'>{'type':'other_pay'}</field>
            <field name="domain">[('type','=','other_pay')]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                点击创建其他支出单
              </p>
            </field>
        </record>
		<!-- 其他收款单menu、其他付款单menu -->
        <menuitem id="menu_other_money_receipt_action" action="other_money_receipt_action" parent="menu_money_manage" sequence="5"/>
        <menuitem id="menu_other_money_payment_action" action="other_money_payment_action" parent="menu_money_manage" sequence="6"/>
	</data>
</openerp>
	